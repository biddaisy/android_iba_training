<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/itemFragment">

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.mr.android.lesson7.ItemFragment"
        android:label="fragment_item_list"
        tools:layout="@layout/fragment_item_list" />
    <fragment
        android:id="@+id/dialogsFragment"
        android:name="com.mr.android.lesson7.DialogsFragment"
        android:label="fragment_dialogs"
        tools:layout="@layout/fragment_dialogs" />
    <action
        android:id="@+id/action_global_itemFragment"
        app:destination="@id/itemFragment" />
    <action
        android:id="@+id/action_global_dialogsFragment"
        app:destination="@id/dialogsFragment" />

</navigation>